<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_coin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/btc"
        android:layout_marginLeft="16dp"
        />


    <TextView
        android:id="@+id/name_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_coin"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="8sp"
        android:text="Bitcoin"
        android:textColor="#de000000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/desc_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_coin"
        android:layout_toRightOf="@id/icon_coin"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="BTC"
        android:textColor="#8b000000"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="9dp"
        android:textStyle="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_chevron_right_24" />
</RelativeLayout>